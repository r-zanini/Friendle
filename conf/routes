# Routes
# This file defines all application routes (Higher priority routes first)
# ~~~~

# An example controller showing a sample home page
GET     /                                controllers.ViewController.index(request:Request)
GET     /login                           controllers.ViewController.loginPage(request:Request)
POST     /login                           controllers.ViewController.loginAction(request:Request)
GET     /logout                           controllers.ViewController.logout(request:Request)
GET     /signup                           controllers.ViewController.signupPage(request:Request)
POST     /signup                           controllers.ViewController.signupAction(request:Request)
GET     /newevent                           controllers.ViewController.newEventPage(request:Request)
GET     /view/:eventId                           controllers.ViewController.viewEventPage(request:Request, eventId:String)
GET     /schedule                           controllers.ViewController.viewSchedule(request:Request)
GET     /schedule/json                           controllers.EventController.eventJSON(request:Request)

# Map static resources from the /public folder to the /assets URL path
GET         /assets/at/*file                                                        controllers.Assets.at(path="/public", file)
GET         /assets/versioned/*file                                                 controllers.Assets.versioned(path="/public", file: Asset)
